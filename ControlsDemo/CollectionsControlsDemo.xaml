    <!--Uncomment to test the collection view-->
    <CollectionView SelectionMode="Multiple"  >
        <CollectionView.Header>
            <Label FontSize="Large" Margin="10" Text="Languages:"/>
        </CollectionView.Header>
        <CollectionView.Footer>
            <Label FontSize="Large" Margin="10" Text="Languages"/>
        </CollectionView.Footer>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type x:String}">
                <x:String>C#</x:String>
                <x:String>Java</x:String>
                <x:String>C++</x:String>
                <x:String>Objective C</x:String>
                <x:String>C</x:String>
                <x:String>Javascript</x:String>
                <x:String>Typescript</x:String>
                <x:String>Ruby</x:String>
                <x:String>Groovy</x:String>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Frame
                        Margin="20"
                        WidthRequest="150"
                        BorderColor="DarkGray"
                        CornerRadius="5"
                        HasShadow="True"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand">
                        <Label Text="{Binding .}" />
                    </Frame>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
